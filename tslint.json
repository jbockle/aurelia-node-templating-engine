{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "quotemark": [
            true,
            "single"
        ],
        "no-console": false,
        "object-literal-sort-keys": false,
        "ordered-imports": false,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore"
        ]
    },
    "linterOptions": {
        "exclude": [
            "node_modules/**/**"
        ]
    }
}