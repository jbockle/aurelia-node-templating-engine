{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/build",
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}